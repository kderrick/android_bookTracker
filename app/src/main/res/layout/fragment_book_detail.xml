<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="epicodus.booktracker.ui.BookDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="left|center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:id="@+id/bookNameTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_weight="1"
                android:ellipsize="none"
                android:singleLine="false"
                android:scrollHorizontally="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:id="@+id/authorTextView"
                android:layout_below="@+id/bookNameTextView"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookImageView"
                android:layout_alignBottom="@+id/authorTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:id="@+id/previewButton"
            android:layout_gravity="right" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:id="@+id/readingProgressRelativeLayout"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started"
                android:id="@+id/startDateTextView"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished"
                android:textColor="@color/white"
                android:id="@+id/endDateTextView"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/startDateTextView"
                android:layout_alignStart="@+id/startDateTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages Per Day"
                android:id="@+id/avgPageTextView"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/endDateTextView"
                android:layout_alignStart="@+id/endDateTextView" />

            <TextView
                android:id="@+id/currentPageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_above="@+id/editBookButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:text="Update"
                android:id="@+id/editBookButton"
                android:background="@drawable/login_button"
                android:textColor="@drawable/login_button_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/currentPageTextView"
                android:layout_alignEnd="@+id/currentPageTextView" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/bookDetailsRelativeLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/saveBookButton"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp"
                android:weightSum="1"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Date:"
                    android:id="@+id/publishedDateTextView"
                    android:drawablePadding="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:id="@+id/categoryTextView"
                    android:drawablePadding="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages: "
                    android:drawablePadding="4dp"
                    android:id="@+id/pageCountTextView"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView"
                    android:layout_weight="0.26">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/white"
                        android:id="@+id/descriptionTextView"
                        android:drawablePadding="4dp"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center" />
                </ScrollView>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save book"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/saveBookButton"
                android:layout_alignParentBottom="true"
                android:background="@drawable/login_button"
                android:textColor="@drawable/login_button_color"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Reading!"
                android:id="@+id/startReadingButton"
                android:layout_above="@+id/finishReadingButton"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Done!"
                android:id="@+id/finishReadingButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>